{
  "name": "library",
  "version": "0.1.0",
  "description": "library description",
  "main": "lib/library.js",
  "scripts": {
    "build": "npm run prettier && webpack && cross-env NODE_ENV=production webpack -p",
    "lint": "npm run prettier && eslint .",
    "prettier": "prettier --single-quote --trailing-comma es5 --write src/**/*.js",
    "start": "webpack --progress --color -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nelsyeung/es6-lib-template.git"
  },
  "keywords": [
    "browser",
    "library"
  ],
  "author": "Nelson Yeung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nelsyeung/es6-library-template/issues"
  },
  "homepage": "https://github.com/nelsyeung/es6-library-template",
  "dependencies": {
    "core-js": "^2.4.1"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-import": "^2.3.0",
    "jest": "^20.0.3",
    "prettier": "^1.4.4",
    "webpack": "^2.6.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": "airbnb-base"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
