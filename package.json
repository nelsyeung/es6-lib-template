{
  "name": "library",
  "version": "0.1.0",
  "description": "library description",
  "main": "lib/library.js",
  "scripts": {
    "build": "cross-env NODE_ENV=dev webpack && cross-env NODE_ENV=build webpack",
    "start": "cross-env NODE_ENV=dev webpack --progress --color -w",
    "test": "eslint ./src/ ./test/ && cross-env NODE_ENV=test nyc mocha --compilers js:babel-register --recursive \"./test/**/*.spec.js\"",
    "test:watch": "mocha --compilers js:babel-register -w --recursive \"./test/**/*.spec.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nelsyeung/es6-lib-template.git"
  },
  "keywords": [
    "browser",
    "library"
  ],
  "author": "Nelson Yeung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nelsyeung/es6-library-template/issues"
  },
  "homepage": "https://github.com/nelsyeung/es6-library-template",
  "dependencies": {
    "core-js": "^2.4.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.12.2",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "webpack": "^2.2.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "mocha": true
    },
    "extends": "airbnb-base"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
